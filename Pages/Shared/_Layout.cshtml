@using global::UserStories.Services
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Stories</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/UserStories/UserStories">UserStories</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Backlog/Backlog">Backlog</a>
                        </li>
                        <li class="nav item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Fixes/Fixes">Fixes</a>
                        </li>
                        <li class="nav item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Memberlist">Members</a>
                        </li>
                        

                        @if (Context.User.Identity.IsAuthenticated)
                        {
                            <a class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Account/AccountPage">@Context.User.Identity.Name</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Account/Login" asp-page-handler="Logout">Logout</a>
                                </li>
                            </a>

                        }
                        else
                        {
                            if (Context.Request.Path == "/Account/Login")
                            {
                                <li class="nav-item navbar-nav ml-auto">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Account/Login" asp-route-ReturnUrl="/Index">Login</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item navbar-nav ml-auto">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Account/Login" asp-route-ReturnUrl="@Context.Request.Path">Login</a>
                                </li>
                            }


                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - UserStories
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
