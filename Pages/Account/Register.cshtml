@page
@model Account.RegisterModel
@{
}

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Programmer.FirstName">First Name</label>
        <input asp-for="Programmer.FirstName" class="form-control" />
        <span class="text-danger" asp-validation-for="Programmer.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Programmer.LastName">Last Name</label>
        <input asp-for="Programmer.LastName" class="form-control" />
        <span class="text-danger" asp-validation-for="Programmer.LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Programmer.Email"></label>
        <input asp-for="Programmer.Email" class="form-control" />
        <span class="text-danger" asp-validation-for="Programmer.Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Programmer.Password"></label>
        <input type="password" asp-for="Programmer.Password" class="form-control" />
        <span class="text-danger" asp-validation-for="Programmer.Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="confirmationPW">Confirm Password</label>
        <input type="password" asp-for="confirmationPW" class="form-control" />
        <span class="text-danger" asp-validation-for="confirmationPW"></span>
    </div>
    <input type="submit" value="Register" class="btn btn-outline-primary" />
</form>